{
    "extends": [
        "tslint:recommended",
        "tslint-config-prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "rules": {
        "linebreak-style": 0,
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "arrow-parens": 0,
        "max-len": [
            "error",
            {
                "code": 140
            }
        ]
    }
}